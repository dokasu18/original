<div class="card">
  <%=link_to image_tag(menu.image, class: "card__img"), menu_path(menu.id) %>
  <div class="card__body">
    <%= link_to menu.title, menu_path(menu.id), class: :card__title%>
    <p class="card__summary">
      <%= menu.food_first %>,
      <%= menu.food_second %>
    </p>
    <%= link_to "by #{menu.user.nickname}", user_path(menu.user_id), class: :card__user %>
  </div>
</div>
