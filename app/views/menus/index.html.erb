<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
         こんにちは、
        <%= link_to "#{current_user.nickname}さん" , menus_path(current_user), class: :greeting__link%>
      </div>
    <% end %>  

    <div class="card__wrapper">
      <%= render partial: 'menu', collection: @menus  %>
    </div>
  </div>
</main>
